<%= form_for book, url: user_books_path(current_user), html: {multipart: true} do |f| %>

  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :epub %>
    <%= f.file_field :epub %>
  </div>


  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  
  <div class="field">
  <%= f.label :genres %>
    <br><%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
    <%= f.fields_for :genres, book.genres.build do |genres_fields| %>
    <br> create a new genre: <%= genres_fields.text_field :name %>
  <% end %>
  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
