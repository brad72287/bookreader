<div class="well">
  <h2>browse by genre</h2>
  <p>here, you can browse the library's collection by genre. there are currently <%= Genre.count %> genres to choose from. <%= link_to 'click here see the most popular genres.', '/genres/most_popular' %> </p> 
</div>

<div class="genreContainer"></div>
    
    <% @genres.each do |genre| %>
      <h3><%= link_to genre.name, genre %> <span class="badge"><%= genre.books.count %></span></a></td></h3>
    <% end %>
    

<script>
$( document ).ready(function() {
	console.log('the script is running');
  	$.ajax({
    	url: "/genres.json"
		})
	  	.done(function(genres) {
	    	$.each(genres, function(key, genre){
	    		console.log(genre.books.length);
	    		$('.genreContainer').append(
	    			"<h4><a href='/genres/"+genre.id+"'>"+genre.name+" <span class='badge'>"+genre.books.length+"</span></a></td></h3>"
	    		);
	    	});
	    });
});
</script>
