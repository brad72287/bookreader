<!DOCTYPE html>
<html>
  <head>
    <title>nadir library</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>



  

  <body >


    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">nadir library</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'all books', root_path %></li>
            <li><%= link_to 'browse by genre', genres_path %></li>
            <li><%= link_to 'my books', user_books_path(current_user) if user_signed_in? %></li>
            <li><%= link_to 'sign up', new_user_registration_path unless user_signed_in? %></li>
            <li><%= link_to 'log in', new_user_session_path unless user_signed_in? %></li>
            <li><%= link_to 'log out', destroy_user_session_path, method: :delete if user_signed_in?%></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

  
  <div class="container">

  
    <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert  %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>



      <%= yield %>
	</div>
  </body>
</html>
