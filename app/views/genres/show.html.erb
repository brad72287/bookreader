<div class="well">
  <h2>genre: <%= @genre.name %></h2>
  <p>displaying X books.</p> 
</div>



<% @books = Book.joins(:genres).where(genres: {name: @genre.name}) %>


<table class = "table table-striped">
  <thead>
    <tr>
      <th>title</th>
      <th>author</th>
      <th>download</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to book.epub_file_name, book.epub.url %></td>
        <td><%= link_to 'details', user_book_path(current_user, book) %></td>
        <td><%= link_to 'edit', edit_user_book_path(current_user, book) %></td>
        <td><%= link_to 'delete', user_book_path(current_user, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

