<div class="well">
  <h2>browse by genre</h2>
  <p>here, you can browse the library's collection by genre. there are currently <%= Genre.count %> genres to choose from. <%= link_to 'click here see the most popular genres.', '/genres/most_popular' %> </p> 
</div>

<div style='display: none;' class="genreContainer"></div>
    
<script>
$(document).ready(function() {
  	$.ajax({url: "/genres.json"})
	  	.done(function(genres) {
	    	$.each(genres, function(key, genreHash){
	    		var genre = new Genre(genreHash); 
	    		$('.genreContainer').append(genre.formatGenre());
	    	});
	    	$('.genreContainer').fadeIn();
	    });
});
</script>
